<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.springCloud.dao.PaymentDao">
    <resultMap id="BaseResultMap" type="com.atguigu.springCloud.entity.Payment">
        <id column="id" property="id"/>
        <result column="serial" property="serial"/>
    </resultMap>
    <select id="selectPaymentById" parameterType="Long" resultMap="BaseResultMap">
        select *
        from payment
        where id = #{id}
    </select>

    <insert id="insertPayment" parameterType="com.atguigu.springCloud.entity.Payment">
        insert into payment(serial)
        values (#{serial})
    </insert>


</mapper>